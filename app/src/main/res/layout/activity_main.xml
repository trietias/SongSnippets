<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tmk.songsnippets.MainActivity"
    android:weightSum="1"
    android:background="@drawable/background">

    <!-- Category Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/categories"
            android:textSize="18sp"
            android:textColor="@color/text"
            android:id="@+id/textView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Spinner
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:id="@+id/categorySpinner" />
    </LinearLayout>

    <!-- Song Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Artist"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:id="@+id/artistName" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Song"
            android:textSize="25sp"
            android:textColor="@color/text"
            android:layout_gravity="center"
            android:id="@+id/songTitle" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Category"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:id="@+id/categoryName" />
    </LinearLayout>

    <!-- Play Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="45dp">
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/play"
            android:onClick="play"
            android:background="@drawable/play_button"
            android:contentDescription="@string/play_button" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round_btn"
            android:id="@+id/refresh"
            android:onClick="random"
            android:contentDescription="@string/refresh_button"
            android:layout_marginLeft="10dp"
            android:text="next"
            android:fontFamily="sans-serif-light"/>
    </LinearLayout>

    <!-- Seconds Selector -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/backward"
            android:onClick="editInterval"
            android:id="@+id/backwardButton"
            android:contentDescription="@string/decrease_interval" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1"
            android:textSize="32sp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/intervalText"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"/>
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/forward"
            android:onClick="editInterval"
            android:id="@+id/forwardButton"
            android:contentDescription="@string/increase_interval" />
    </LinearLayout>

    <!-- Points -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>

    <!-- Points Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/team1Add"
                android:background="@drawable/round_btn"
                android:onClick="increaseScore"
                android:contentDescription="@string/increase_score"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:text="+"
                android:textSize="30sp"
                android:textColor="@color/accent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:text="@string/_1"
                android:textSize="25sp"
                android:textAlignment="center"
                android:id="@+id/team1Points"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="25dp"
                android:text="@string/_1"
                android:textSize="25sp"
                android:textAlignment="center"
                android:id="@+id/team2Points"
                android:layout_weight="1"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/team2Add"
                android:background="@drawable/round_btn"
                android:onClick="increaseScore"
                android:contentDescription="@string/increase_score"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:text="+"
                android:textSize="30sp"
                android:textColor="@color/accent"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resetScore"
            android:onClick="resetScore"
            android:background="@drawable/round_btn2"
            android:fontFamily="sans-serif-thin"
            android:text="reset"
            android:textSize="21sp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="bottom"/>
    </LinearLayout>
</LinearLayout>
