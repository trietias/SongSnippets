<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tmk.songsnippets.MainActivity"
    android:weightSum="1"
    android:background="@drawable/background">

    <!-- CATEGORY SELECTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/categories"
            android:textSize="18sp"
            android:textColor="@color/text"
            android:id="@+id/textView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/categorySpinner"
            android:background="@null"/>
    </LinearLayout>

    <!-- SONG INFORMATION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="vertical"
        android:layout_marginTop="25dp">

        <!-- Artist -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Artist"
            android:textSize="21sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/artistName" />

        <!-- Song -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Song"
            android:textSize="32sp"
            android:textColor="@color/text"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/songTitle"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <!-- Category -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Category"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/categoryName" />
    </LinearLayout>

    <!-- PLAY & NEXT BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="18dp">
        <Button
            android:layout_width="225dp"
            android:layout_height="150dp"
            android:id="@+id/play"
            android:onClick="play"
            android:background="@drawable/play"
            android:fontFamily="sans-serif-light"
            android:text="play"
            android:textColor="@color/accent"
            android:textSize="25sp"
            android:contentDescription="@string/play_button" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/next_btn"
            android:id="@+id/refresh"
            android:onClick="random"
            android:contentDescription="@string/refresh_button"
            android:fontFamily="sans-serif-light"
            android:text="next"
            android:layout_gravity="bottom"/>
    </LinearLayout>

    <!-- SECONDS SELECTOR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="18dp">
        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/backward"
            android:onClick="editInterval"
            android:id="@+id/backwardButton"
            android:contentDescription="@string/decrease_interval" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1"
            android:textSize="36sp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/intervalText"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"/>
        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/forward"
            android:onClick="editInterval"
            android:id="@+id/forwardButton"
            android:contentDescription="@string/increase_interval" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="seconds"/>
    </LinearLayout>

    <!-- POINTS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="28dp">

        <!-- Team 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:layout_width="45dp"
                android:layout_height="65dp"
                android:id="@+id/team1Add"
                android:background="@drawable/round_btn"
                android:onClick="increaseScore"
                android:contentDescription="@string/increase_score"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:text="team 1"
                android:textSize="15sp"
                android:textColor="@color/text" />
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/_1"
                android:textSize="25sp"
                android:textAlignment="center"
                android:id="@+id/team1Points"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Divider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="|"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:layout_weight="1"/>

        <!-- Team 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:paddingRight="25dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/_1"
                android:textSize="25sp"
                android:textAlignment="center"
                android:id="@+id/team2Points"
                android:layout_weight="1"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="65dp"
                android:id="@+id/team2Add"
                android:background="@drawable/round_btn"
                android:onClick="increaseScore"
                android:contentDescription="@string/increase_score"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:text="team 2"
                android:textSize="15sp"
                android:textColor="@color/text"/>
        </LinearLayout>
    </LinearLayout>

    <!-- OPTIONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resetScore"
            android:onClick="resetScore"
            android:background="@drawable/reset_btn"
            android:fontFamily="sans-serif-light"
            android:text="new game"
            android:textSize="18sp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom"/>
    </LinearLayout>
</LinearLayout>
