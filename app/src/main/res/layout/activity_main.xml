<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tmk.songsnippets.MainActivity"
    android:weightSum="1"
    android:background="@drawable/background">

    <!-- Category Selection -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:text="@string/categories"
            android:textColor="@color/text"
            android:id="@+id/textView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categorySpinner"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <!-- Play Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="15dp">
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/play"
            android:onClick="play"
            android:background="@drawable/play_button"
            android:contentDescription="@string/play_button" />
    </LinearLayout>

    <!-- Seconds Selector -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/backward"
            android:onClick="editInterval"
            android:id="@+id/backwardButton"
            android:contentDescription="@string/decrease_interval" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1"
            android:textSize="40sp"
            android:id="@+id/intervalText"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/forward"
            android:onClick="editInterval"
            android:id="@+id/forwardButton"
            android:contentDescription="@string/increase_interval" />
    </LinearLayout>

    <!-- Song Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song"
            android:textColor="@color/text"
            android:layout_gravity="center"
            android:id="@+id/songTitle"
            android:layout_marginTop="45dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:layout_gravity="center"
            android:id="@+id/artistName"
            android:textColor="@color/text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:layout_gravity="center"
            android:id="@+id/categoryName"
            android:textColor="@color/text" />
    </LinearLayout>

    <!-- Points -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/_1"
            android:id="@+id/team1Points" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/_1"
            android:id="@+id/team2Points" />
    </LinearLayout>

    <!-- Points Button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/team1Add"
            android:background="@drawable/round_btn"
            android:onClick="increaseScore"
            android:contentDescription="@string/increase_score"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:text="+"
            android:textSize="30sp"
            android:textColor="@color/accent" />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/team2Add"
            android:background="@drawable/round_btn"
            android:onClick="increaseScore"
            android:contentDescription="@string/increase_score"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:text="+"
            android:textSize="30sp"
            android:textColor="@color/accent"/>
    </LinearLayout>

    <!-- Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/resetScore"
            android:onClick="resetScore"
            android:layout_marginBottom="15dp"
            android:background="@drawable/restart"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/refresh"
            android:id="@+id/refresh"
            android:layout_marginBottom="15dp"
            android:onClick="random"
            android:contentDescription="@string/refresh_button"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
